<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <!-- Falls benötigt -->
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:background="#EEEEEE">

        <EditText
            android:id="@+id/etLapTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="mm:ss.fff"
            android:inputType="number|phone"
            android:ems="8"
            android:textColor="#000000"
            android:textColorHint="#888888"
            android:background="@drawable/edittext_background"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"/>

        <Button
            android:id="@+id/btnAddLap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rundenzeit hinzufügen"
            android:textColor="#FFFFFF"
            android:backgroundTint="#6200EE"
            android:layout_below="@id/etLapTime"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"/>

        <Button
            android:id="@+id/btnFinishRace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rennen beenden"
            android:textColor="#FFFFFF"
            android:backgroundTint="#03DAC5"
            android:layout_below="@id/btnAddLap"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"/>
        <TextView
            android:id="@+id/tvCurrentRunTotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gesamtzeit: "
            android:textSize="18sp"
            android:textColor="#000000"
            android:layout_below="@id/btnFinishRace"
            android:layout_marginTop="16dp"/>

        <TextView
            android:id="@+id/tvBestRunDiff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Abstand zum besten Run: "
            android:textSize="18sp"
            android:textColor="#000000"
            android:layout_below="@id/tvCurrentRunTotal"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/tvAverageRunDiff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Abstand zum Durchschnitt: "
            android:textSize="18sp"
            android:textColor="#000000"
            android:layout_below="@id/tvBestRunDiff"
            android:layout_marginTop="8dp"/>



    </RelativeLayout>
</layout>
